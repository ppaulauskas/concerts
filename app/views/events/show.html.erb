<% provide(:title, 'Test Event') %>

<%= @currband = Band.find_by name: @event.headliner %>

<div class="secondary-header2">
	<%= render 'layouts/navbar3' %>
</div>
<div class="container-monthly">
	<div class="part1">
		<div class="event-individual <%= @currband.name.gsub(/[^0-9A-Za-z]/, '') %>" id="<%= Random.new.rand(10...100) %>">
					<% if @currband.rating > 50 %>
						<div class="star-full mover2" name="<%= @currband.image %>" href="javascript:void(0);"><input name="_method" type="hidden" value="patch" /><input type="hidden" value="<%= @currband.name %>" name="name"></div>
					<% else %>
						<div class="star-empty mover2" name="<%= @currband.image %>" href="javascript:void(0);"><input name="_method" type="hidden" value="patch" /><input type="hidden" value="<%= @currband.name %>" name="name"></div>
					<% end %>
				<div class="curr-event"><h4><%= @event.headliner %></h4></div>
				<div class="deleter cross" href="javascript:void(0);"><input name="_method" type="hidden" value="patch" /><input type="hidden" value="<%= @event.headliner%>" name="name"></div>
		</div>	
	</div>
	<div class="part2">
		<div class="bandpic"><img src="<%= @currband.image %>" class="picture" \></div>
	</div>
	<div class="part1">
		<% @currvenue = (Venue.find_by venue_id: @event.venue_id) %>
		<div class="event-individual <%= @currvenue.name.gsub(/[^0-9A-Za-z]/, '') %>" id="<%= @currvenue.venue_id %>">
			<div class="star-empty"></div>
			<div class="curr-venue"><h4><%= @currvenue.name %></h4></div>
			<div class="cross"></div>
		</div>
		<div class="time">
			<%= @event.eventtime.to_date.strftime("%^a, %^b")%>
			<%= @event.eventtime.to_date.day %>
		</div>
	</div>
	<div class="part1"></div>
	<div class="part1"></div>
	<div class="part1"></div>
</div>