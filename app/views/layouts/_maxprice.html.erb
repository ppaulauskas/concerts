<script>
  //Loads on document load
  $(document).ready(function(){
  	
  	// Gets the maxprice as it is typed
    $(document).on('keyup', '.maxprice2', function(){

      // Parses the search into an int
      var str = parseInt($(".maxprice2").val(), 10);
      
      if(str > 10){

      //loop through the events
      $(".container-event").each(function(index){
        // Makes sure it has the id attribute
        if($(this).children('.event').children('.event-individual').first().attr("id")){
          // Parses the price from the id and checks it against max
          if(parseInt($(this).children('.event').children('.event-individual').first().attr("id"), 10) > str){
            // Fades out those that dont match
            $(this).delay(800).fadeOut("slow");
          }else{
            // Fades in items that match
            $(this).delay(800).fadeIn("slow");
          }
        }
      });
      }else if(isNaN(str)){
      	$(".container-event").each(function(index){
            // Fades in items that match
            $(this).delay(800).fadeIn("slow");
      });
      };
    });
  });
</script>
