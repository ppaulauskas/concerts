<% @eventstoday = @events.select{|x| x.eventtime.to_date == @d}.sort_by{|x| -(Band.find_by name: x.headliner).rating} %>
<% @eventstoday.each_with_index do |individ, index2| %>
<div class="container-event">
	<% if index2 == 0 %>
	<div class="weekday">
		<h6 class="month">
			<%= @d.strftime("%^a") %>
		</h6>
		<h6>
			<%= @d.strftime("%b").upcase %>
			<%= @d.day %>
		</h6>
	</div>
	<%end%>
	<div class="event <% if @d < Date.today %>old<%end%>">
		<div class="playbutton">
		</div>
		<div class="bandpic" href="javascript:void(0);">
			<img class="topimg" src="<% if @eventstoday.length > 0 %><%= (Band.find_by name: (individ.headliner)).image %><% end %>">
		</div>
		
		<% individ.artists.each_with_index do |individ2, index| %>
			<% @currband = (Band.find_by name: individ2) %>
			<!--
			<#% if @d < Date.today %>
				<div class="event-individual <%= @currband.name.gsub(/[^0-9A-Za-z]/, '') %>" id="<%= Random.new.rand(10...100) %>">
					<% if @currband.rating > 50 %>
						<div class="star-full old mover <% if index == 0 %>top<% end %>" name="<%= @currband.image %>" href="javascript:void(0);"><input name="_method" type="hidden" value="patch" /><input type="hidden" value="<%= individ.headliner %>" name="name"></div>
					<% else %>
						<div class="star-empty old mover <% if index == 0 %>top<% end %>" name="<%= @currband.image %>" href="javascript:void(0);"><input name="_method" type="hidden" value="patch" /><input type="hidden" value="<%= individ.headliner %>" name="name"></div>
					<% end %>
					<div class="curr-event old"><h4><%= individ2 %></h4></div>
					<div class="deleter old cross" href="javascript:void(0);"><input name="_method" type="hidden" value="patch" /><input type="hidden" value="<%= individ.headliner%>" name="name"></div>
				</div>
			<#% else %>
			-->
				<div class="event-individual <%= @currband.name.gsub(/[^0-9A-Za-z]/, '') %>" id="<%= Random.new.rand(10...100) %>">
					<% if @currband.rating > 50 %>
						<div class="star-full mover <% if index == 0 %>top<% end %>" name="<%= @currband.image %>" href="javascript:void(0);"><input name="_method" type="hidden" value="patch" /><input type="hidden" value="<%= individ.headliner %>" name="name"></div>
					<% else %>
						<div class="star-empty mover <% if index == 0 %>top<% end %>" name="<%= @currband.image %>" href="javascript:void(0);"><input name="_method" type="hidden" value="patch" /><input type="hidden" value="<%= individ.headliner %>" name="name"></div>
					<% end %>
				<div class="curr-event"><h4><%= individ2 %></h4></div>
				<div class="deleter cross" href="javascript:void(0);"><input name="_method" type="hidden" value="patch" /><input type="hidden" value="<%= individ.headliner%>" name="name"></div>
				</div>	
				<!--
			<#% end %>
			-->
			
			<% if index == 0 && index == individ.artists.size - 1 %>
				<div class="littleinfo">
					<h4 class="weektiny">at</h4>
				</div>
			<% elsif index == 0 && !(index == individ.artists.size - 1) %>
				<div class="littleinfo">
					<h4 class="weektiny">with</h4>
				</div>
			<% elsif index == individ.artists.size-1 && !(index == 0) %>
				<div class="littleinfo">
					<h4 class="weektiny">at</h4>
				</div>
			<% else %>
				<div class="littleinfo">
					<h4 class="weektiny">and</h4>
				</div>
			<% end %>
		<% end %>
		
		<% @currvenue = (Venue.find_by venue_id: individ.venue_id) %>
		
		<div class="event-individual" <%= @currvenue.name.gsub(/[^0-9A-Za-z]/, '') %>" id="<%= @currvenue.venue_id %>">
			<div class="star-empty"></div>
			<div class="curr-venue"><h4><%= @currvenue.name %></h4></div>
			<div class="cross"></div>
		</div>
		
		<div class="littleinfo">
			<h4 class="weektiny"><%= individ.eventtime.strftime("%I:%M%p") %></h4>
		</div>
	</div>
</div>
<%end%>		
<% @d=@d.tomorrow %>